<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".splashScreen">

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#B5FF17"
        android:fontFamily="@font/jua"
        android:shadowColor="#454545"
        android:text="@string/Button2"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#E8E8E8"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="0.8dp" />

    <Button
        android:id="@+id/playnow2"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#BF36FF"
        android:fontFamily="@font/jua"
        android:shadowColor="#454545"
        android:text="@string/Button1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#E8E8E8"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="129dp"
        android:layout_height="243dp"
        android:src="@drawable/tictactoetext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="35dp"
        android:layout_height="63dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@+id/playnow2"
        app:layout_constraintEnd_toEndOf="@+id/playnow2"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="@+id/playnow2"
        app:layout_constraintTop_toTopOf="@+id/playnow2"
        app:layout_constraintVertical_bias="0.533" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="34dp"
        android:layout_height="60dp"
        android:src="@drawable/cross"
        app:layout_constraintBottom_toBottomOf="@+id/cancelbtn"
        app:layout_constraintEnd_toEndOf="@+id/cancelbtn"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="@+id/cancelbtn"
        app:layout_constraintTop_toTopOf="@+id/cancelbtn" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="35dp"
        android:layout_height="63dp"
        android:src="@drawable/circle2"
        app:layout_constraintBottom_toBottomOf="@+id/cancelbtn"
        app:layout_constraintEnd_toEndOf="@+id/cancelbtn"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="@+id/cancelbtn"
        app:layout_constraintTop_toTopOf="@+id/cancelbtn"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="35dp"
        android:layout_height="63dp"
        android:src="@drawable/cross2"
        app:layout_constraintBottom_toBottomOf="@+id/playnow2"
        app:layout_constraintEnd_toEndOf="@+id/playnow2"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/playnow2"
        app:layout_constraintTop_toTopOf="@+id/playnow2"
        app:layout_constraintVertical_bias="0.466" />

</androidx.constraintlayout.widget.ConstraintLayout>